{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-Wall",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lglfw3",
        "-lX11",
        "-lXrandr",
        "-lXinerama",
        "-lXi",
        "-lXxf86vm",
        "-lXcursor",
        "-lGL",
        "-lpthread",
        "-ldl",
        "-lGLEW"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "compiler: /bin/g++"
    }
  ]
}
